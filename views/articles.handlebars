
<div class="row">
  <div class="card col s10">
    <span id="titleinput" class="card-title">{{articles.title}}</span>
    <form action="/articles/{{articles._id}}" method="post" id="dataid">
      <h5>Comment on this Article</h5>
      <div class="row">
        <div class="input-field">
          <input id="nameinput" type="text" placeholder="Name" name="name" class="validate active">
        </div>
        <div class="input field">
          <input id="bodyinput" type="text" placeholder="Comment" name="comment" class="validate active">
        </div>
        <center><input class="btn add-comment-button topnav" type="Submit" value="submit" id="savenote"></center>
      </div>
  </div>
  </form>
</div>

<div class="row">
  <div class="col s2"></div>
  <div class="col s8">
    <h6>Comments</h6>
    {{#if articles.note}}
    {{#each articles.note}}
    <div class="card">
      <p id="nameComment">{{name}}</p>
      <p>{{comment}}</p>
    </div>
    {{/each}}
    {{else}}
    <p>No comments Yet.</p>
    {{/if}}
  </div>
</div>