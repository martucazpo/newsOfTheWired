<div class="row">
  <h3 class="card">{{articles.title}}</h3>
  <h5 class="card-panel articleBody">{{articles.link}}</h5>
</div>

<div class="row">
  <div class="col s2"></div>
  <form action="/notes/{{articles._id}}" method="post" class="card-panel col s8">
    <h5>Comment on this Article</h5>
    <div class="row">
      <div class="input-field">
        <i class="material-icons prefix">User Name</i>
        <input id="icon_prefix" type="text" placeholder="Name" name="name" class="validate active">
      </div>
      <div class="row">
        <div class="input field">
          <center><input class="btn add-comment-button topnav" type="Submit" value="submit"></center>
        </div>
      </div>
  </form>
</div>