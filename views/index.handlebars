
<div id="index">
    <div>
        <h1 class="card z-depth-3 center-align cyan accent-2">Read the Latest from NPR's Strange News</h1>
        <div class="row">
            <div class="col s3"></div>
        </div>
    </div>
    <div class="row">
        <div class="col s12 left-align">
            {{#each articles}}
            <div class="card cyan darken-1">
                <div class="card-content white-text">
                    <span class="card-title">{{title}}</span>
                    <div class="card-action">
                        <a href="{{link}}" class="waves-effect light-waves red lighten-2 btn" id="readbtn">Read
                            Article</a>
                        <a href="/articles/{{id}}" class="waves-effect light-waves red lighten-2 btn"
                            id="notebtn">Comment</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>